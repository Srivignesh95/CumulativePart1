@model test1.Models.Students
@if (Model.Studentid > 0)
{
    <h2 style="text-align:center;margin-bottom:2em;margin-top:2em;">@Model.Studentfname's Information</h2>
    <div class="card mb-3" style="max-width: 540px;margin:auto; ">
        <div class="row g-0">
            <div class="col-md-4">
                <svg class="bd-placeholder-img img-fluid rounded-start" width="100%" height="300" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="40%" y="50%" fill="#dee2e6" dy=".3em">Image</text></svg>   
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <p class="card-text"><strong>Full Name:</strong> @Model.Studentfname @Model.Studentlname</p>
                    <p class="card-text"><strong>Student Number:</strong> @Model.Studentnumber </p>
                    <p class="card-text">
                        <strong>Courses Enrolled in:</strong>
                        @foreach (var courses in Model.Coursesname)
                        {
                            <li>@courses.coursename</li>
                        }
                    </p>
                    <p class="card-text"><small class="text-muted">Joining Date: @Model.Enroledate</small></p>
                    <a href="/StudentPage/List" class="btn btn-secondary me-2">Back to List</a> <a class="btn btn-danger" href="/StudentPage/DeleteConfirm/@Model.Studentid">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger text-center" role="alert">
        The Student you are looking for is not available.
    </div>
    <div style="text-align: center; margin-top: 1em;">
        <a href="/StudentPage/List" class="btn btn-secondary">Back to List</a>
    </div>
}