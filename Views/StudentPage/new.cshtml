<div id="containershow" class="container mt-5">
    <nav class="mb-4">
        <a class="btn btn-primary" href="/StudentPage/List">Back To Students</a>
    </nav>
    <h2 class="mb-4">New Student</h2>
    <form method="POST" action="/StudentPage/Create">
        <div class="row mb-3">
            <label for="Studentfname" class="col-sm-2 col-form-label">First Name:</label>
            <div class="col-sm-10">
                <input type="text" id="Studentfname" name="Studentfname" class="form-control" placeholder="Enter first name" required />
            </div>
        </div>
        <div class="row mb-3">
            <label for="Studentlname" class="col-sm-2 col-form-label">Last Name:</label>
            <div class="col-sm-10">
                <input type="text" id="Studentlname" name="Studentlname" class="form-control" placeholder="Enter last name" required />
            </div>
        </div>
        <div class="row mb-3">
            <label for="Studentnumber" class="col-sm-2 col-form-label">Student Number:</label>
            <div class="col-sm-10">
                <input type="text" id="Studentnumber" name="Studentnumber" class="form-control" placeholder="Enter student number" required />
            </div>
        </div>
        <div class="row mb-3">
            <label for="Enroledate" class="col-sm-2 col-form-label">Enrollment Date:</label>
            <div class="col-sm-10">
                <input type="date" id="Enroledate" name="Enroledate" class="form-control" required />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <input type="submit" value="Create Student" class="btn btn-success w-100" />
            </div>
        </div>
    </form>
</div>
