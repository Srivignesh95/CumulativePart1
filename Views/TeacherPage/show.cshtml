@model test1.Models.Teacher

@if (Model.Teacherid > 0)
{
    <h2 style="text-align:center;margin-bottom:2em;margin-top:2em;"> @Model.Teacherfname's Details</h2>
    <div class="card mb-3" style="max-width: 540px;margin:auto; ">
        <div class="row g-0">
            <div class="col-md-4">
                <svg class="bd-placeholder-img img-fluid rounded-start" width="100%" height="300" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="40%" y="50%" fill="#dee2e6" dy=".3em">Image</text></svg>   
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <p class="card-text"><strong>Full Name:</strong> @Model.Teacherfname @Model.Teacherlname</p>
                    <p class="card-text"><strong>Employee Number:</strong> @Model.Employeenumber</p>
                    <p class="card-text"><strong>Salary:</strong> @Model.Salary</p>
                    <p class="card-text">
                        <strong>Courses Thought:</strong> 
                        @foreach (var course in Model.Coursename)
                        {
                            <li>@course.coursename</li>
                        }
                    </p>
                    <p class="card-text"><small class="text-muted">Joining Date: @Model.Hiredate</small></p>
                    <a href="/TeacherPage/List" class="btn btn-secondary me-2">Back to List</a> <a class="btn btn-danger" href="/TeacherPage/DeleteConfirm/@Model.Teacherid">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger text-center" role="alert">
        The teacher you are looking for is not available.
    </div>
    <div style="text-align: center; margin-top: 1em;">
        <a href="/TeacherPage/List" class="btn btn-secondary">Back to List</a>
    </div>
}