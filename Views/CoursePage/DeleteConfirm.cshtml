@model test1.Models.Course

<div id="containershow" class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-body">
            <h2 class="card-title text-danger text-center">Delete Confirmation</h2>
            <p class="text-center">
                Are you sure you want to delete
                <span class="fw-bold">@Model.coursename</span>?
            </p>
            <p class="text-center text-muted">This action cannot be undone.</p>
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center" role="alert">
                    @TempData["Error"]
                </div>
            }
            <form method="POST" action="/CoursePage/Delete/@Model.Courseid" class="text-center">
                <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                <a class="btn btn-secondary" href="/CoursePage/Show/@Model.Courseid">Cancel</a>
            </form>
        </div>
    </div>
</div>
